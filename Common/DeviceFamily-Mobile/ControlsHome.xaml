                            </VisualStateManager.VisualStateGroups>
                            <Ellipse x:Name="backgroundellipse" Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
