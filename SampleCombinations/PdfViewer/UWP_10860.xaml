<Page
    x:Class="Syncfusion.SampleBrowser.UWP.PdfViewer.UWP_10860"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="using:Syncfusion.Windows.PdfViewer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Syncfusion.SampleBrowser.UWP.PdfViewer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                Padding="5,5,5,5"
                Click="Button_Click"
                Content="Back" />
            <Button
                Padding="5,5,5,5"
                Click="Button_Click_1"
                Content="OpenPdf" />
            <Button
                Padding="5,5,5,5"
                Click="Button_Click_3"
                Content="Add Ink" />
            <Button
                Padding="5,5,5,5"
                Click="Button_Click_2"
                Content="Again Load" />
        </StackPanel>
        <cc:SfPdfViewerControl x:Name="pdfViewer" Grid.Row="1" />
    </Grid>
</Page>
