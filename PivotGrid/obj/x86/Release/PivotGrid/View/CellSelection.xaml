<layout:SampleLayout x:Class="BI.PivotGrid.CellSelection"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d" xmlns:pivotGrid="using:Syncfusion.UI.Xaml.PivotGrid"
                     xmlns:layout="using:Common" Header="PivotGrid">

    <layout:SampleLayout.Sample>
        <ContentControl>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <pivotGrid:SfPivotGrid x:ConnectionId='1' x:Name="pivotGrid" Grid.Row="0" Margin="5" AllowSelection="True" ShowHeaderCellsToolTip="True"/>

                <ListBox x:ConnectionId='2' Margin="5" Name="lstSelectedItems" Grid.Row="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="White"></TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </ContentControl>
    </layout:SampleLayout.Sample>

    <layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Width="300">
                <StackPanel Margin="10 7">
                    <TextBlock Margin="10 7" Text="Cell Selection" FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"/>
                    <RadioButton x:ConnectionId='3' x:Name="rdBtnEnableCellSelection" Margin="10 7" Content="Enable Cell Selection" FontFamily="Segoe UI"
                                 IsChecked="{Binding ElementName=pivotGrid, Path=AllowSelection, Mode=TwoWay}"
                                                                       />
                    <RadioButton x:ConnectionId='4' x:Name="rdBtnEnableCellSelectionWithHeaders" Margin="10 7" Content="Enable Cell Selection With Headers" FontFamily="Segoe UI" 
                                 IsChecked="{Binding ElementName=pivotGrid1, Path=AllowSelectionWithHeaders, Mode=TwoWay}"
                                                                                  />
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </layout:SampleLayout.Setting>
</layout:SampleLayout>

