<layout:SampleLayout x:Class="BI.PivotGrid.Hyperlink"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d"  xmlns:pivotGrid="using:Syncfusion.UI.Xaml.PivotGrid"
                     xmlns:layout="using:Common" Header="PivotGrid">
    
    <layout:SampleLayout.Sample>
        <pivotGrid:SfPivotGrid x:Name="pivotGrid" Margin="5" ShowHeaderCellsToolTip="True">
        </pivotGrid:SfPivotGrid>
    </layout:SampleLayout.Sample>
    
    <layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Width="300">
               <StackPanel Margin="10 7">
                    <CheckBox Name="chkEnableColumnHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Column Header Hyperlink" 
                              Checked="chkEnableColumnHeaderHyperlink_Checked" Unchecked="chkEnableColumnHeaderHyperlink_Checked"/>
                    <CheckBox Name="chkEnableRowHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Row Header Hyperlink" 
                              Checked="chkEnableRowHeaderHyperlink_Checked" Unchecked="chkEnableRowHeaderHyperlink_Checked"/>
                    <CheckBox Name="chkEnableSummaryColumnHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Summary Column Hyperlink" 
                              Checked="chkEnableSummaryColumnHeaderHyperlink_Checked" Unchecked="chkEnableSummaryColumnHeaderHyperlink_Checked"/>
                    <CheckBox Name="chkEnableSummaryRowHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Summary Row Hyperlink" 
                              Checked="chkEnableSummaryRowHeaderHyperlink_Checked" Unchecked="chkEnableSummaryRowHeaderHyperlink_Checked"/>
                    <CheckBox Name="chkEnableValueCellsHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Value Cells Hyperlink" 
                              Checked="chkEnableValueCellsHyperlink_Checked" Unchecked="chkEnableValueCellsHyperlink_Checked"/>
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </layout:SampleLayout.Setting>
</layout:SampleLayout>
