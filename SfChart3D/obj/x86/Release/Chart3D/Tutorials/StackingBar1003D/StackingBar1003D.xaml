<common:SampleLayout
    x:Class="Syncfusion.SampleBrowser.UWP.SfChart3D.StackingBar1003D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncfusion.SampleBrowser.UWP.SfChart3D"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Common"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <common:SampleLayout.Sample>
        <ContentControl>
            <Grid x:ConnectionId='1' x:Name="grid">
                
                <Grid.DataContext>
                    <local:CategoryDataViewModel/>
                </Grid.DataContext>

                <Grid.Resources>
                        <ResourceDictionary>
                        <chart:ChartColorModel x:Key="customBrush">
                            <chart:ChartColorModel.CustomBrushes>
                                <SolidColorBrush Color="#99DE4A" />
                                <SolidColorBrush Color="#A4C5F4" />
                                <SolidColorBrush Color="#F783C1" />
                                <SolidColorBrush Color="#FBEC7E" />
                                <SolidColorBrush Color="#7EDBDD" />
                                <SolidColorBrush Color="#D3A0F8" />
                                <SolidColorBrush Color="#FFCA61" />
                                <SolidColorBrush Color="#FEB9FC" />
                                <SolidColorBrush Color="#7EE0FC" />
                                <SolidColorBrush Color="#ECF875" />
                            </chart:ChartColorModel.CustomBrushes>
                        </chart:ChartColorModel>


                        <local:TextConverter x:Key="txtconv"/>
                    <!--Template for series data labels-->
                    <DataTemplate x:Key="labelTemplate1">
                        <Grid>
                            <Rectangle Stroke="White" Fill="{Binding Interior}" 
                               StrokeThickness="1"/>
                            <TextBlock Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="10" Foreground="White" Text="{Binding Converter={StaticResource txtconv}}"/>
                        </Grid>
                    </DataTemplate>
                        </ResourceDictionary>
                    </Grid.Resources>

                    <chart:SfChart3D x:ConnectionId='2' x:Name="StackingBar100Chart3D" SideBySideSeriesPlacement="True" PerspectiveAngle="125.39325842696624" 
                         Palette="Custom" ColorModel="{StaticResource customBrush}"
                                 EnableRotation="True"  Depth="150" 
                         VerticalAlignment="Bottom">

                    <!--PrimaryAxis customized with styles-->
                    <chart:SfChart3D.PrimaryAxis>
                        <chart:CategoryAxis3D TickLineSize="2">
                        </chart:CategoryAxis3D>
                    </chart:SfChart3D.PrimaryAxis>

                    <!--SecondaryAxis customized with style and range customization-->
                    <chart:SfChart3D.SecondaryAxis>
                        <chart:NumericalAxis3D TickLineSize="2" OpposedPosition="False" RangePadding="None" Interval="10">
                        </chart:NumericalAxis3D>
                    </chart:SfChart3D.SecondaryAxis>

                    <!--StackingBar100Series3D with data labels-->
                    <chart:StackingBar100Series3D chart:ChartSeriesBase.Spacing="0.3"
                                          ItemsSource="{Binding CategoricalDatas}" XBindingPath="Year" 
                                          YBindingPath="Plastic" Label="First"
                                          >
                        <chart:StackingBar100Series3D.AdornmentsInfo>
                            <chart:ChartAdornmentInfo3D x:ConnectionId='5' x:Name="sb100ChartAdornmentInfo3D1" />
                        </chart:StackingBar100Series3D.AdornmentsInfo>
                    </chart:StackingBar100Series3D>

                    <chart:StackingBar100Series3D chart:ChartSeriesBase.Spacing="0.3" 
                                          ItemsSource="{Binding CategoricalDatas}" XBindingPath="Year" 
                                          YBindingPath="Metal" Label="First"
                                          >
                        <chart:StackingBar100Series3D.AdornmentsInfo>
                            <chart:ChartAdornmentInfo3D x:ConnectionId='4' x:Name="sb100ChartAdornmentInfo3D2" />
                        </chart:StackingBar100Series3D.AdornmentsInfo>
                    </chart:StackingBar100Series3D>

                    <chart:StackingBar100Series3D chart:ChartSeriesBase.Spacing="0.3" 
                                          ItemsSource="{Binding CategoricalDatas}" XBindingPath="Year" 
                                          YBindingPath="Iron" Label="First" 
                                          >
                        <chart:StackingBar100Series3D.AdornmentsInfo>
                            <chart:ChartAdornmentInfo3D x:ConnectionId='3' x:Name="sb100ChartAdornmentInfo3D3" />
                        </chart:StackingBar100Series3D.AdornmentsInfo>
                    </chart:StackingBar100Series3D>
                </chart:SfChart3D>
            </Grid>
        </ContentControl>
    </common:SampleLayout.Sample>
</common:SampleLayout>

